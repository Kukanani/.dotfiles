# Use bash
shell /bin/bash

# Big scrollback
defscrollback 2048

# No annoying startup message
startup_message off

# Display the status line
hardstatus on
hardstatus alwayslastline
hardstatus string "%{.kW}%-w%{.bW}%t [%n]%{-}%+w %=%{..G} %H %{..Y} %Y/%m/%d %c"

# Setup screens
screen -t 'one' 0 bash
screen -t 'two' 1 bash
screen -t 'extra' 2 bash

# Switch to the first screen
select 0